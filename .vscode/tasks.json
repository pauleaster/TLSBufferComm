{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build_client",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++20",
          "-I",
          "/usr/local/include/boost",
          "-L",
          "/usr/local/lib",
          "-ftrack-macro-expansion=0","-ftrack-macro-expansion=0",
          "${workspaceFolder}/client_main.cpp",
          "${workspaceFolder}/client.cpp",
          "-o",
          "${workspaceFolder}/client",
          "-lboost_system",
          "-lssl",
          "-lcrypto"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
