{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build_sender",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++14",
          "-I",
          "/usr/local/include/boost",
          "-L",
          "/usr/local/lib",
          "${workspaceFolder}/sender.cpp",
          "-o",
          "${workspaceFolder}/sender",
          "-lboost_system",
          "-lssl",
          "-lcrypto"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build_receiver",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++14",
          "-I",
          "/usr/local/include/boost",
          "-L",
          "/usr/local/lib",
          "${workspaceFolder}/receiver.cpp",
          "-o",
          "${workspaceFolder}/receiver",
          "-lboost_system",
          "-lssl",
          "-lcrypto"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ],
    "options": {
      "cwd": "${workspaceFolder}"
    },
    "inputs": [
      {
        "id": "boostLibraries",
        "type": "command",
        "command": "ls",
        "args": [
          "/usr/local/lib/libboost_*.so"
        ]
      }
    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*)\\:(\\d+)\\:(\\d+)\\: (fatal )?(error|warning): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
    "configurations": [
      {
        "name": "Debug Sender",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/sender",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb"
      },
      {
        "name": "Run Sender",
        "type": "shell",
        "request": "launch",
        "program": "${workspaceFolder}/sender",
        "args": [],
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Debug Receiver",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/receiver",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb"
      },
      {
        "name": "Run Receiver",
        "type": "shell",
        "request": "launch",
        "program": "${workspaceFolder}/receiver",
        "args": [],
        "cwd": "${workspaceFolder}"
      }
    ]
  }
  