    "options": {
      "cwd": "${workspaceFolder}"
    },
    "inputs": [
      {
        "id": "boostLibraries",
        "type": "command",
        "command": "ls",
        "args": [
          "/usr/local/lib/libboost_*.so"
        ]
      }
    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (fatal )?(error|warning|note): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
      }    
      },
    "configurations": [
      {
        "name": "Debug Client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/client",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb"
      },
